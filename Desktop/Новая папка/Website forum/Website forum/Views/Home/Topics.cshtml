@model IEnumerable<Website_forum.Models.Topic>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<h1>Topics</h1>
@if (Model.Count() == 0)
{
    <div class="display-4">No any Topics</div>
}
else
{
<table class="table table-dark table-striped">

    <thead>
        <tr>
            <th>Topic</th>
            <th>Count of posts</th>
        </tr>
    </thead>

    @foreach (var topic in Model)
    {
        <tr>
            <td class="text-warning">@topic.Name</td>
            <td>@topic.Posts.Count</td>
            <td>
                <a asp-controller="Home" asp-action="ListPosts" asp-route-id="@topic.Id" class="btn btn-outline-info">Show posts</a>
            </td>
        </tr>
    }
</table>
}


